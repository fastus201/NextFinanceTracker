generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id    String  @id @default(cuid())
  name  String?
  email String  @unique
  spese Spesa[]
}

model Spesa {
  id          Int      @id @default(autoincrement())
  descrizione String
  importo     Float
  data        DateTime @default(now())
  user        User     @relation(fields: [userId], references: [id])
  userId      String
}